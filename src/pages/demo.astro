---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Demo - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="flex flex-col items-center justify-center min-h-[calc(100vh-150px)] py-10 px-4">
			<h1 class="text-4xl font-bold mb-8">Demo Page</h1>
			<button class="btn btn-primary">Click Me!</button>
		</main>
		<Footer />
	</body>
</html>
