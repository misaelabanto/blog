---
import { filterByLanguage, getSlugFromId } from '@/i18n/utils';
import BlogPost from '@/layouts/BlogPost.astro';
import { type CollectionEntry, getCollection, render } from 'astro:content';

export async function getStaticPaths() {
        const allPosts = await getCollection('blog');
        const now = new Date();
        const spanishPosts = filterByLanguage(allPosts, 'es').filter((post) => post.data.pubDate <= now);
	
	return spanishPosts.map((post) => ({
		params: { slug: getSlugFromId(post.id) },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
const slug = getSlugFromId(post.id);
---

<BlogPost {...post.data} lang="es" slug={slug}>
	<Content />
</BlogPost> 